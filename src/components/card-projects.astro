---
interface Props {
    href? : string,
    img? : string,
    title? : string,
    role? : string,
    txt? : string,

    
}

const { href, img, title , role, txt } = Astro.props;
---
<a href={href} class="group relative block bg-black rounded-3xl max-w-full">
  <img
    alt=""
    src={img}
    class="absolute inset-0 h-full w-full object-cover opacity-50 md:opacity-75 transition-opacity group-hover:opacity-50 rounded-3xl"
  />

  <div class="relative p-4 sm:p-6 lg:p-8">
    

    <div class="mt-32 sm:mt-48 lg:mt-64">
      <div
        class=" translate-y-0 md:translate-y-8 transform  opacity-100 md:opacity-0 transition-all md:group-hover:translate-y-0 md:group-hover:opacity-100"
      ><p class="text-sm font-medium uppercase tracking-widest text-main-melon">{role}</p>

      <p class="text-xl font-bold text-white sm:text-2xl mb-4">{title}</p>
        <p class="text-sm text-white">
          {txt}
        </p>
      </div>
    </div>
  </div>
</a>

